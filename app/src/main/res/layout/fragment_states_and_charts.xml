<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_spinner"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_capsule_shape">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiner"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:spinnerMode="dialog"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/scroll_view"
        app:layout_constraintTop_toBottomOf="@id/rl_spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_total_no_of_days"
                android:background="@drawable/drawable_rectangle_black_border"
                android:layout_weight=".20"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_days"
                    android:text="Total Nos of days - 45"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/rl_spinner"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1.25"
                android:id="@+id/rl_reason">
                <TextView
                    android:id="@+id/tv_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date wise summary"
                    android:textAlignment="center"
                    android:background="@drawable/drawable_rectangle_black_border"
                    android:textColor="@color/purple_500"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_header_1"
                android:layout_marginTop="5dp"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/list_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/heading"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@color/column_haeder">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:id="@+id/tv_day"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Day"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:id="@+id/tv_reason"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Reason"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:id="@+id/tv_count"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />
                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:id="@+id/count_percentage"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Percentage"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_Data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/heading"/>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_reason_1"
                android:layout_marginTop="5dp"
                android:layout_weight=".30">
                <TextView
                    android:id="@+id/tv_header_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No smoke and smoke summary"
                    android:textAlignment="center"
                    android:background="@drawable/drawable_rectangle_black_border"
                    android:textColor="@color/purple_500"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_header_2"
                android:layout_marginTop="5dp"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/list_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/heading_1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@color/column_haeder">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Total \n Attempts"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Smoke\nCount"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="No Smoke\nCount"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Smoke\nPercentage"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />
                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="No Smoke\nPercentage"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_Data_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/heading_1"/>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_reason_2"
                app:layout_constraintTop_toBottomOf="@id/rl_spinner"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1.25"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_header_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day wise summary"
                    android:textAlignment="center"
                    android:background="@drawable/drawable_rectangle_black_border"
                    android:textColor="@color/purple_500"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_header_3"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/list_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/heading_2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@color/column_haeder">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:id="@+id/tv_date_3"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Day"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Reason"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />
                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_height="match_parent"
                                android:layout_width="1dp"
                                android:background="@color/column_haeder"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Percentage"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_Data_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/heading_2"/>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>