<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StatesAndChartsFragment"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_spinner"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_capsule_shape">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiner"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:spinnerMode="dialog"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/scroll_view"
        app:layout_constraintTop_toBottomOf="@id/rl_spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_reason"
                app:layout_constraintTop_toBottomOf="@id/rl_spinner"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1.25">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/list_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/heading"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="#F1EDED">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:id="@+id/tv_day"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Day"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:id="@+id/tv_reason"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Reason"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:id="@+id/tv_count"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Count"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />
                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:id="@+id/count_percentage"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Percentage"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_Data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/heading"/>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_reason_1"
                app:layout_constraintTop_toBottomOf="@id/rl_spinner"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_weight=".5">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/list_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/heading_1"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="#F1EDED">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Total \n Attempts"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Smoke\nCount"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="No Smoke\nCount"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Smoke\nPercentage"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />
                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="No Smoke\nPercentage"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_Data_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/heading_1"/>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_reason_2"
                app:layout_constraintTop_toBottomOf="@id/rl_spinner"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1.25"
                android:visibility="gone">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/list_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/heading_2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="#F1EDED">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:id="@+id/tv_date_3"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Day"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Reason"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Count"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />
                            <View xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_height="match_parent"
                                android:layout_width="1dp"
                                android:background="#EBE7E7"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Percentage"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_Data_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/heading_2"/>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>